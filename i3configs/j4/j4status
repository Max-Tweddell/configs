[Plugins]
Output = i3bar
Input = pulseaudio;nl;sensors;upower;time;

[Time]
Zones = Pacific/Auckland;UTC;
Formats = %F %a %T;%T;

[Sensors]
Sensors = coretemp-isa-0000;

[MPD]
Actions=mouse:1 toggle;mouse:4 previous;mouse:5 next;

[PulseAudio]
Actions=mouse:1 mute toggle;mouse:4 raise;mouse:5 lower;

[Override sensors:coretemp-isa-0000/temp1]
Disable=true

[Netlink]
Interfaces=eth;
